collector {
  license { accept = true }
  interface = "0.0.0.0"
  port = ${PORT}

  streams {
    good {
      name = ${TOPIC_GOOD}
      brokers = ${BROKER}
      maxBytes = ${MAX_BYTES}
      producerConf = {
        "security.protocol" = "PLAINTEXT"
        "sasl.mechanism" = "GSSAPI"
      }
    }
    bad {
      name = ${TOPIC_BAD}
      brokers = ${BROKER}
      maxBytes = ${MAX_BYTES}
      producerConf = {
        "security.protocol" = "PLAINTEXT"
        "sasl.mechanism" = "GSSAPI"
      }
    }
  }

  networking {
    responseHeaderTimeout = 10 seconds
    bodyReadTimeout = 2 seconds
  }
}